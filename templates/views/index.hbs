                        <div class="container has-text-centered" style="margin-bottom: 100px;">
                            <h1 class="title">
                                Weather
                            </h1>
                        </div>
                        <form class="has-text-centered">
                            <div class="input-group input-group-lg" style="margin-top:20px;margin-bottom:20px;">
